# User/Group IDs for file ownership (run `id` to find yours)
PUID=1000
PGID=1000

# Timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)
TZ=UTC

# Sync interval in minutes
SYNC_INTERVAL=5

# Path to your local Google Drive sync folder (on host)
LOCAL_PATH=/path/to/gdrive

# Gmail SMTP settings for failure notifications
# Create an App Password at: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Email address to receive notifications
NOTIFY_EMAIL=your-email@gmail.com
